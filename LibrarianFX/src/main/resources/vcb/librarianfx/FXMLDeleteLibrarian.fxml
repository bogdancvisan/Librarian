<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>
<?import vcb.librarianfx.*?>

<GridPane fx:id="gp1" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vcb.librarianfx.FXMLController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />    
    </padding>
   <children>
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" />
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
          <children>
            <Label fx:id="delLibUserLabel" text="User/Librarian ID:" />
          </children>
       </HBox>    
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <HBox alignment="CENTER" GridPane.rowIndex="3" />
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="delLibUserField" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
              <Button fx:id="delLibDeleteButton" onAction="#handleAdminOption" text="Delete Account" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <Button fx:id="delLibBackButton" onAction="#handleAdminOption" text="Back" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1">
         <children>
              <Label fx:id="delLibLabel" text="Delete Librarian" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="4">
         <children>
            <Label fx:id="delLibMessageLabel" />
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>     
</GridPane>
