<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>
<?import vcb.librarianfx.*?>

<GridPane fx:id="gp1" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vcb.librarianfx.FXMLController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />    
    </padding>
   <children>
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
          <children>
              <Label fx:id="label" text="Admin Options" />
          </children>
       </HBox>
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
          <children>
              <Button fx:id="buttonAddLib" onAction="#handleAdminOption" text="Add Librarian" />
          </children>
       </HBox>    
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
          <children>
              <Button fx:id="buttonViewLib" onAction="#handleAdminOption" text="View librarians" />
          </children>     
       </HBox>
      <HBox alignment="CENTER" GridPane.rowIndex="3">
         <children>
            <Button fx:id="buttonDeleteLib" onAction="#handleAdminOption" text="Delete Librarian" />
         </children>
      </HBox>
      <HBox alignment="CENTER" GridPane.rowIndex="4">
         <children>
            <Button fx:id="buttonExitAO" mnemonicParsing="false" onAction="#handleAdminOption" text="Logout" />
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>     
</GridPane>
